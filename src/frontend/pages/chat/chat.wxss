/* pages/chat/chat.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 消息列表区域 */
.message-list {
  flex: 1;
  padding: 20rpx;
  background-color: #f5f5f5;
  overflow-y: auto;
}

/* 单条消息样式 */
.message {
  margin: 10rpx 0;
  padding: 15rpx;
  border-radius: 10rpx;
  max-width: 70%;
}

.user {
  background-color: #07c160;
  color: white;
  align-self: flex-end;
}

.bot {
  background-color: white;
  border: 1rpx solid #e5e5e5;
  align-self: flex-start;
}

/* 输入区域 */
.input-area {
  display: flex;
  padding: 20rpx;
  background-color: white;
  border-top: 1rpx solid #ddd;
}

.input-area input {
  flex: 1;
  padding: 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.input-area button {
  background-color: #07c160;
  color: white;
  padding: 0 30rpx;
  border-radius: 8rpx;
}